<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   layout="vertical"
		   height="100%"
		   width="100%"
		   horizontalScrollPolicy="auto"
		   xmlns:controls="cn.superion.base.components.controls.*"
		   creationComplete="doInit()"
		   xmlns:view="cn.superion.materialDept.util.*">

	<fx:Script source="ModExpiryAlarmas.as"/>

	<s:BorderContainer width="100%"
					   height="100%"
					   backgroundColor="0xE2E8E8"
					   borderVisible="false">
		<s:Scroller width="100%"
					height="100%">
			<s:VGroup id="vg"
					  gap="0"
					  height="100%"
					  width="100%">
				<view:ToolBar id="toolBar"
							  width="100%"
							  printClick="printClickHandler(event)"
							  expClick="expClickHandler(event)"
							  queryClick="queryClickHandler(event)"
							  exitClick="exitClickHandler(event)"/>

				<controls:BarSubTitle title="保质期预警"/>

				<controls:SuperDataGrid id="dgAvailDate"
										hasRowNo="true"
										width="100%"
										height="100%"
										styleName="dataGrid"
										sumField="{['amount','tradeMoney']}"
										sumLableField="rowNo"
										sumRowLabelText="合计"
										format="{[,,,,,'0.00','0.00','0.00']}">
					<controls:columns>

						<mx:DataGridColumn headerText="序号"
										   dataField="rowNo"
										   width="40"
										   textAlign="left"/>
						<mx:DataGridColumn headerText="物资编码"
										   dataField="materialCode"
										   width="100"
										   textAlign="left"/>
						<mx:DataGridColumn headerText="物资名称"
										   dataField="materialName"
										   width="100"
										   textAlign="left"/>
						<mx:DataGridColumn headerText="规格型号"
										   dataField="materialSpec"
										   width="100"
										   textAlign="left"/>
						<mx:DataGridColumn headerText="单位"
										   dataField="materialUnits"
										   width="40"
										   textAlign="left"/>
						<mx:DataGridColumn headerText="结存数量"
										   dataField="amount"
										   width="100"
										   textAlign="right"/>
						<mx:DataGridColumn headerText="进价"
										   dataField="tradePrice"
										   width="80"
										   textAlign="right"/>
						<mx:DataGridColumn headerText="进价金额"
										   dataField="tradeMoney"
										   width="80"
										   textAlign="right"/>
						<mx:DataGridColumn headerText="批号"
										   dataField="batch"
										   width="100"
										   textAlign="right"/>
						<mx:DataGridColumn headerText="生产日期"
										   dataField="madeDate"
										   width="100"
										   textAlign="left"/>
						<mx:DataGridColumn headerText="保质期(天)"
										   dataField="qulityDays"
										   width="100"
										   textAlign="right"/>
						<mx:DataGridColumn headerText="有效期至"
										   dataField="availDate"
										   width="100"
										   textAlign="right"/>
					</controls:columns>
				</controls:SuperDataGrid>
			</s:VGroup>
		</s:Scroller>
	</s:BorderContainer>
</mx:Module>

